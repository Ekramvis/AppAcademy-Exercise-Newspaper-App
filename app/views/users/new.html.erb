<h1> New User </h1>

<%= form_for(@user) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br>
	<h4>Subscribe</h4>
	<% Newspaper.all.each do |news| %>
		<%= news.title %>
		<select name="user[subscription_plan_ids][]">
			<option value="">None</option>
			<% news.subscription_plans.each do |sp| %>
			<option value="<%= sp.id %>"><%= sp.weekly ? "Weekly" : "Daily" %></option>
			<% end %>
		</select>
		<br>
	<% end %>
	<br>

	<%= f.submit "Sign up"%>
<% end %>



