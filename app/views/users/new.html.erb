<h1> New User </h1>

<%= form_for(@user) do |f| %>

	<%= f.label :name %>
	<%= f.text_field :name %>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<%= f.label :password_confirmation %>
	<%= f.password_field :password_confirmation %>
	<br>
	<h4>Subscribe</h4>
	<% SubscriptionPlan.all.each do |sp| %>
		<%= sp.newspaper.title %> - <%= sp.weekly ? "Weekly" : "Daily"%>
		- $<%= sp.price %>
		<%= check_box_tag(
			"user[subscription_plan_ids][]",
			sp.id
		)%>
		<br>
	<% end %>
	<br>
	<%= hidden_field_tag("user[subscription_plan_ids][]", "")%>
	<%= f.submit "Sign up"%>
<% end %>